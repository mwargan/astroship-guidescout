---
import Container from "@components/container.astro";
import Features from "@components/features.astro";
import Hero from "@components/hero.astro";
import Testimonial from "@components/testimonial.astro";
import Layout from "@layouts/Layout.astro";
import BentoFeatures from "@components/bentoFeatures.astro";
import Companies from "@components/companies.astro";

const {
  geo: { city, country },
} = Astro.locals.netlify.context;
---

<Layout title="">
  <Container>
    <Hero
      title="Get Discovered. Earn More. Guide Your Way."
      subtitle="Join GuideScout and connect with top travel companies seeking expert guides like you."
      ctaText="Sign Up Now – It’s Free"
      secondaryCtaText="Learn How It Works"
    />

    <Features
      title="Why GuideScout is Perfect for You"
      subtitle="Unlock new opportunities, grow your reputation, and earn more—all on your terms."
      features={[
        {
          title: "Access More Opportunities",
          description:
            "Connect with a global network of travel companies looking for guides in your area of expertise.",
          icon: "bx:bxs-user-check",
        },
        {
          title: "Flexible Work, Your Way",
          description:
            "Choose when, where, and how you want to work. No commitments—just opportunities",
          icon: "bx:bxs-user-check",
        },
        {
          title: "Secure Payments",
          description:
            "Get paid on time, every time, with transparent earnings and no hidden fees.",
          icon: "bx:bxs-user-check",
        },
        {
          title: "Showcase Your Expertise",
          description:
            "Create a standout profile with photos, reviews, and certifications.",
          icon: "bx:bxs-user-check",
        },
        {
          title: "Expand Your Reach",
          description:
            "Be seen by companies looking for guides in your area, whether you're in a bustling city or a hidden gem.",
          icon: "bx:bxs-user-check",
        },
        {
          title: "Focus on Guiding",
          description:
            "Connect with companies who will find you clients, take care of bookings, provide equipment, and more. You just guide.",
          icon: "bx:bxs-user-check",
        },
      ]}
    />
    <Companies
      query={city || country?.name || "Finland"}
      administrativeLevel={city ? "city" : "country"}
    />
    <Testimonial
      text="GuideScout is a fantastic idea. No more spending hours trying to find clients and manage bookings. Now, companies come to me! They handle the logistics—bookings, payments, and even equipment—so I can focus on what I love: sharing unforgettable travel experiences. If you’re a guide looking to grow and work on your terms, GuideScout is the way to go."
      author="Lucía Ferrer"
      company="Freelance Guide"
    />
  </Container>
</Layout>
