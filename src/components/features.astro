---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Find Expert Guides",
    description:
      "Connect with experienced freelance guides worldwide for personalized and local travel experiences.",
    icon: "bx:bxs-user-check",
  },
  {
    title: "Streamlined Bookings",
    description:
      "Easily manage guide bookings with instant confirmations and secure payments.",
    icon: "bx:bxs-calendar-check",
  },
  {
    title: "Verified Professionals",
    description:
      "All guides are thoroughly vetted to ensure top-notch service for your clients.",
    icon: "bx:bxs-shield",
  },
  {
    title: "Global Network",
    description:
      "Access a diverse pool of guides across popular destinations and off-the-beaten-path locations.",
    icon: "bx:bx-world",
  },
  {
    title: "Real-Time Insights",
    description:
      "Track guide performance, ratings, and reviews to make informed decisions for every trip.",
    icon: "bx:bxs-chart",
  },
  {
    title: "Support for Guides",
    description:
      "Freelance guides can build profiles, showcase expertise, and get matched with the right opportunities.",
    icon: "bx:bxs-briefcase",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Everything you need to connect and explore
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    GuideScout brings together travel companies and freelance guides for
    seamless collaboration and unforgettable experiences.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
